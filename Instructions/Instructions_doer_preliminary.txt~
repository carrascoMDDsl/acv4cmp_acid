# Add the work done on personal svn repository
cp -r ~/Works/MDD/CMProductions/SVNs/acv4cmp/trunk/Code/Result/cmp ~/Works/MDD/CMProductions/gits/acv4cmp_acid/Code

# Remove .svn directories
find ~/Works/MDD/CMProductions/gits/acv4cmp_acid/Code/cmp -name '.svn' -exec rm -r {} \;

# Stage the Code directory
git add ~/Works/MDD/CMProductions/gits/acv4cmp_acid/Code

# Commit, Push to github
git commit -a -m "First code drop"
git push 

